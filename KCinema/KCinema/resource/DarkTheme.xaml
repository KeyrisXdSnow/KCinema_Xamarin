<?xml version="1.0" encoding="utf-8"?>

<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="KCinema.resource.DarkTheme">
         
    
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="FrameColor">#1e1e1e</Color>
    <Color x:Key="BorderImageColor">#1e1e1e</Color>
    <Color x:Key="TextPrimaryColor">#edede7</Color>

    <Color x:Key="TextHolderPrimaryColor">#B0FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#eFeFeF</Color>

    <Color x:Key="TopBarColor">#f5a42b</Color>

    <Color x:Key="PosterInfo">#9CFFFFFF</Color>
    <Color x:Key="PosterInfoText">Black</Color>

    <Style x:Key="Title" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="Large" />
    </Style>
</ResourceDictionary>